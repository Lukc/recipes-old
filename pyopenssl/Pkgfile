depends=(python)
# pkg++ recipe made by Piernov. (he donâ€™t want to maintain the package. :D)

name=pyopenssl
pypi_name=pyOpenSSL
version=0.10
release=1

includes=(pypi)

build () {
   cd pyOpenSSL-$version
   python setup.py install --root=$PKG
   chown -R root:root $PKG
   find $PKG -name '*egg-info' \
       -o -name test | xargs rm -rf
}
